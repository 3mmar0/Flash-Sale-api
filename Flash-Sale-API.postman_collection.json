    "item": [
        {
            "name": "Products",
            "item": [
                {
                    "name": "List Products",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"List products successful\", function () {",
                                    "    pm.response.to.have.status(200);",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData).to.have.property('data');",
                                    "    pm.expect(jsonData).to.have.property('meta');",
                                    "    if (jsonData.data.length > 0) {",
                                    "        pm.expect(jsonData.data[0]).to.have.property('id');",
                                    "        pm.expect(jsonData.data[0]).to.have.property('available_stock');",
                                    "    }",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/products?page=1",
                            "host": ["{{base_url}}"],
                            "path": ["products"],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1",
                                    "description": "Page number (optional)"
                                }
                            ]
                        },
                        "description": "Get a paginated list of all products with available stock"
                    },
                    "response": []
                },
                {
                    "name": "Get Product",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/products/{{product_id}}",
                            "host": ["{{base_url}}"],
                            "path": ["products", "{{product_id}}"]
                        },
                        "description": "Get product details with available stock"
                    },
                    "response": []
                }
            ]
        },
